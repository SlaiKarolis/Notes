@page
@model FinalTask.Pages.Notes.CreateModel
@{
}
<br />

<h2>Create new note</h2>
<div class= "border container" style="padding:30px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row mt-2">
			<div class="col-4">
				<label asp-for="Category.Name"></label>
			</div>
			<div class="col-4">
				<input asp-for="Category.Name" class="form-control" /> 
			</div>
			<span asp-validation-for="Category.Name" class= "text-danger"></span>
		</div>
		<div class="form-group row mt-2">
			<div class="col-4">
				<label asp-for="Note.Title"></label>
			</div>
			<div class="col-4">
				<input asp-for="Note.Title" class="form-control" />
			</div>
			<span asp-validation-for="Note.Title" class= "text-danger"></span>
		</div>

		<div class="form-group row mt-2">
			<div class="col-4">
				<label asp-for="Note.Content"></label>
			</div>
			<div class="col-4">
				<input asp-for="Note.Content" class="form-control" />
			</div>
			<span asp-validation-for="Note.Content" class= "text-danger"></span>
		</div>


		<div class="form-group mt-2 d-flex flex-row">
			<div clas="col-3 offset-4">
				<input type="submit" value="create" class="btn btn-outline-primary m-1" />
			</div>
			<div class="col-3">
				<a asp-page="index" class ="btn btn-outline-success m-1">Back</a>
			</div>
		</div>

	</form>
</div>
@section Scripts{
	<partial name = "_ValidationScriptsPartial" />
}